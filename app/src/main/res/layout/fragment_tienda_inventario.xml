<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".fragment_tienda_inventario">

    <Button
        android:id="@+id/idBotonEliminar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/redondez_botones_daniel"
        android:text="@string/txtInvenEliminar"
        android:textColor="#F2F2F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonAgregar" />

    <Button
        android:id="@+id/idBotonAgregar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/redondez_botones_daniel"
        android:text="@string/txtInvenAgregar"
        android:textColor="#F2F2F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonVisualizar" />

    <Button
        android:id="@+id/idBotonVisualizar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/redondez_botones_daniel"
        android:text="@string/txtInvenVisualizar"
        android:textColor="#F2F2F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBotonModCantidad"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/redondez_botones_daniel"
        android:text="@string/txtInvenModCantidad"
        android:textColor="#F2F2F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonEditar" />

    <Button
        android:id="@+id/idBotonEditar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/redondez_botones_daniel"
        android:text="@string/txtInvenEditar"
        android:textColor="#F2F2F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonEliminar" />

</androidx.constraintlayout.widget.ConstraintLayout>