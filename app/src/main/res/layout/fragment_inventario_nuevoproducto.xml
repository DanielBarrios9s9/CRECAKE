<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment_inventario_nuevoproducto">

    <EditText
        android:id="@+id/editNombrenuevoproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:backgroundTint="#F2F2F2"
        android:ems="10"
        android:hint="@string/nombre_del_producto"
        android:inputType="textPersonName"
        android:textColorHint="#F2F2F2"
        android:layout_margin="15dp"/>

    <Spinner
        android:id="@+id/spinnerNuevoProducto"
        android:layout_width="355dp"
        android:layout_height="37dp"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/editPrecionuevoproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:autofillHints=""
        android:backgroundTint="#F2F2F2"
        android:ems="10"
        android:hint="@string/precio_producto"
        android:inputType="number"
        android:textColorHint="#F2F2F2" />

    <EditText
        android:id="@+id/editCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:backgroundTint="#F2F2F2"
        android:ems="10"
        android:hint="@string/cantidad"
        android:inputType="number"
        android:textColorHint="#F2F2F2"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/ofertaNuevaProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:autofillHints=""
        android:backgroundTint="#F2F2F2"
        android:ems="10"
        android:hint="@string/_oferta"
        android:inputType="number"
        android:textColorHint="#F2F2F2" />

    <EditText
        android:id="@+id/editDescripcionnuevoproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:autofillHints=""
        android:backgroundTint="#F2F2F2"
        android:ems="10"
        android:gravity="start|end"
        android:hint="@string/descripci_n_del_nuevo_producto"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        android:textColorHint="#F2F2F2" />

    <Button
        android:id="@+id/buttonAgregarnuevoproducto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/siguiente"
        android:layout_margin="20dp"/>



</LinearLayout>