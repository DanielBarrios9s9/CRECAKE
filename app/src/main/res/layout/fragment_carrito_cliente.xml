<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".CarritoClienteFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-1dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="410dp"
            android:layout_height="64dp"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BF5A7F"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_baseline_menu_24" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/carrito"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/total_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tienes_0_productos"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewCarrito"
            android:layout_width="match_parent"
            android:layout_height="358dp" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="355dp"
            android:layout_height="179dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="@string/subtotal"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtotal_compra"
                    android:layout_width="161dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="false"
                    android:text="@string/_40000"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descuento"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descuento_total_compra"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="129dp"
                    android:layout_height="29dp"
                    android:gravity="bottom"
                    android:text="@string/comisi_n_5"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/comision_total_compra"
                    android:layout_width="100dp"
                    android:layout_height="29dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="@string/_2000"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="125dp"
                    android:layout_height="62dp"
                    android:gravity="bottom"
                    android:text="@string/total"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_compra"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="@string/_42000"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="28sp" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="@color/colorSecondary"
            android:backgroundTint="@color/colorSecondary"
            android:text="@string/finalizar_compra"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>