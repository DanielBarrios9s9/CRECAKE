<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF5A7F"
    tools:context=".Inventario">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="62dp"
        android:background="#8C1C3A"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:text="@string/txtInvenTitulo"
            android:textColor="#F2F2F2"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/idBotonEliminar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:text="@string/txtInvenEliminar"
        android:textSize="20sp"
        android:background="@drawable/redondez_botones_daniel"
        android:textColor="#F2F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonAgregar" />

    <Button
        android:id="@+id/idBotonAgregar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:text="@string/txtInvenAgregar"
        android:textSize="20sp"
        android:textColor="#F2F2F2"
        android:background="@drawable/redondez_botones_daniel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonVisualizar" />

    <Button
        android:id="@+id/idBotonVisualizar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:text="@string/txtInvenVisualizar"
        android:textSize="20sp"
        android:textColor="#F2F2F2"
        android:background="@drawable/redondez_botones_daniel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/idBotonModCantidad"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="73dp"
        android:text="@string/txtInvenModCantidad"
        android:textSize="20sp"
        android:textColor="#F2F2F2"
        android:background="@drawable/redondez_botones_daniel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonEditar"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/idBotonEditar"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:text="@string/txtInvenEditar"
        android:textSize="20sp"
        android:textColor="#F2F2F2"
        android:background="@drawable/redondez_botones_daniel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBotonEliminar" />

</androidx.constraintlayout.widget.ConstraintLayout>