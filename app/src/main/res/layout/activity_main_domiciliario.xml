<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:backgroundTint="#BF5A7F"
    tools:context=".MainDomiciliario">

    <FrameLayout
        android:id="@+id/fragment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ped_disponibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F2F2F2"
            android:drawableTop="@drawable/ic_baseline_assignment_24"
            android:drawablePadding="-10dp"
            android:text="Pedidos disponibles"
            android:textColor="#BF5A7F"
            android:textSize="8dp" />

        <Button
            android:id="@+id/ped_activos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F2F2F2"
            android:drawableTop="@drawable/ic_baseline_check_box_24"
            android:drawablePadding="-10dp"
            android:text="Pedidos activos"
            android:textColor="#BF5A7F"
            android:textSize="8dp" />

        <Button
            android:id="@+id/historial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F2F2F2"
            android:drawableTop="@drawable/ic_baseline_person_24"
            android:drawablePadding="-10dp"
            android:text="Cuenta"
            android:textColor="#BF5A7F"
            android:textSize="8dp" />

    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>