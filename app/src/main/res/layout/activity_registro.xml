<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF5A7F"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Registro">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#8C1C3A"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/registro"
        android:textColor="#F2F2F2"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        app:drawableTint="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/t_usuario"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F2F2F2"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#8C423B"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/idRbCliente"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:text="@string/cliente"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F2F2F2"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/idRbNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:text="@string/tienda"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F2F2F2"
            android:textColorHint="#F2F2F2"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/idRbDomiciliario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:text="@string/domicilio"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#F2F2F2"
            android:textSize="30sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/redondez_botones_daniel"
        android:onClick="SiguienteActivity"
        android:shadowColor="#FFFFFF"
        android:text="@string/next"
        android:textColor="#F2F2F2"
        android:textSize="18sp" />
</LinearLayout>