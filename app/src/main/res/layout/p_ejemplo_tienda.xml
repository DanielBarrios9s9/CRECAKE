<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF5A7F"
    style="@style/Theme.AppCompat.Light.NoActionBar">

    <TableRow
        android:id="@+id/tabla_lista"
        android:layout_width="match_parent"
        android:layout_height="178dp">

        <androidx.cardview.widget.CardView
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp">

            <ImageView
                android:id="@+id/imagen_producto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="@string/todo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Theme.AppCompat.Light.NoActionBar"
            android:layout_width="227dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/nombre_del_producto"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/precio_producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/precio_producto"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/oferta_producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_oferta"
                    android:textColor="#000000" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_ver"
                        android:layout_width="49dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_cuadrado"
                        android:text="@string/ver"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/separador2"
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:text="@string/todo"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_editar"
                        android:layout_width="75dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_cuadrado"
                        android:text="@string/editar"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/separador"
                        android:layout_width="6dp"
                        android:layout_height="wrap_content"
                        android:text="@string/todo"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_eliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/button_cuadrado"
                        android:text="@string/eliminar"
                        android:textColor="#000000" />
                </TableRow>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </TableRow>

</LinearLayout>