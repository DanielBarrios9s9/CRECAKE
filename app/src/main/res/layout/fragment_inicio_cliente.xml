<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    tools:context=".InicioClienteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/opciones"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="58dp"
            android:layout_height="43dp"
            android:background="@drawable/ic_baseline_menu_24"
            android:contentDescription="@string/todo"
            android:tint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/btn_cat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.388" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="188dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="165dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cat"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:alpha="1"
                    android:background="@drawable/redondez_botones"
                    android:backgroundTintMode="multiply"
                    android:drawableTop="@drawable/ic_baseline_cake_24"
                    android:elevation="100sp"
                    android:gravity="center"
                    android:outlineProvider="none"
                    android:singleLine="true"
                    android:soundEffectsEnabled="true"
                    android:text="@string/cat_logo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btn_carrito"
                    app:layout_constraintEnd_toStartOf="@+id/btn_coti"
                    app:layout_constraintHorizontal_bias="0.561"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.622" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="164dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_coti"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="153dp"
                    android:layout_height="150dp"
                    android:alpha="1"
                    android:background="@drawable/redondez_botones"
                    android:backgroundTintMode="multiply"
                    android:drawableTop="@drawable/ic_baseline_create_24"
                    android:elevation="100sp"
                    android:gravity="center"
                    android:outlineProvider="none"
                    android:singleLine="true"
                    android:soundEffectsEnabled="true"
                    android:text="@string/cotizaci_n"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btn_pedido"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.854"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.622" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="159dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_carrito"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="52dp"
                    android:alpha="1"
                    android:background="@drawable/redondez_botones"
                    android:backgroundTintMode="multiply"
                    android:drawableTop="@drawable/ic_baseline_shopping_cart_24"
                    android:elevation="100sp"
                    android:gravity="center"
                    android:outlineProvider="none"
                    android:singleLine="true"
                    android:soundEffectsEnabled="true"
                    android:text="@string/carrito"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btn_ofertas"
                    app:layout_constraintEnd_toStartOf="@+id/btn_pedido"
                    app:layout_constraintHorizontal_bias="0.657"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pedido"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:alpha="1"
                    android:background="@drawable/redondez_botones"
                    android:backgroundTintMode="multiply"
                    android:drawableTop="@drawable/ic_baseline_assignment_24"
                    android:elevation="100sp"
                    android:gravity="center"
                    android:outlineProvider="none"
                    android:singleLine="true"
                    android:soundEffectsEnabled="true"
                    android:text="@string/pedido"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btn_usuario"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.854"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.83" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_usuario"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:alpha="1"
            android:background="@drawable/redondez_botones"
            android:backgroundTintMode="multiply"
            android:drawableTop="@drawable/ic_baseline_user"
            android:elevation="100sp"
            android:gravity="center"
            android:outlineProvider="none"
            android:singleLine="true"
            android:soundEffectsEnabled="true"
            android:text="@string/usuario"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.854"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.773" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="411dp"
        android:layout_height="127dp"
        android:foreground="@drawable/ic_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:targetApi="m" />

</LinearLayout>