<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="410dp"
    android:layout_height="150dp"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_Pedido"
        android:layout_width="391dp"
        android:layout_height="143dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_Pedido"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="25dp"
                android:contentDescription="@string/todo"
                android:elevation="15dp" />

            <LinearLayout
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Nombre_Pedido"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="@string/nombre_del_producto"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Cantidad_Pedido"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:text="@string/cantidad"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Fecha_PedidoHoy"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:text="@string/fecha_del_pedido"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>