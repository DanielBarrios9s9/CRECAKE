<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".fragment_tienda_estadisticas">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="259dp"
            android:layout_height="51dp"
            android:background="#008C1C3A"
            android:gravity="center"
            android:text="@string/estadisticas"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#8C1C3A"
            android:textSize="36sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:background="#008C1C3A"
            android:contentDescription="@string/estI"
            app:srcCompat="@mipmap/ic_barra" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:drawable/list_selector_background"
            android:foreground="@mipmap/ic_menos_vendidos"
            android:text="Button" />

        <Button
            android:id="@+id/botonSiguiente"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:drawable/list_selector_background"
            android:foreground="@mipmap/ic_ubicacion_clientes"
            android:text="Button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#00FFFFFF"
            android:foreground="@mipmap/ic_mas_vendidos"
            android:text="Button" />

        <Button
            android:id="@+id/idBotonRegistro"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="?attr/actionBarItemBackground"
            android:foreground="@mipmap/ic_age"
            android:text="edad" />
    </LinearLayout>


    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8C1C3A"
        android:layout_margin="25dp"
        android:shadowColor="#FFFFFF"
        android:text="@string/back"
        android:textColor="#F2F2F2"
        android:textSize="18sp"
        android:layout_gravity="center"/>

</LinearLayout>